<div class="container">

<div class="center">
	<h1>Editar Groupo</h1>
	</div>
<div class="container-forms">
	<%= simple_form_for @group do |f| %>
	  <% if @group.errors.any? %>
	    <div id="error_explanation">
	      <h2>
	        <%= pluralize(@group.errors.count, "error") %> prohibieron
	      </h2>
	      <ul>
	        <% @group.errors.full_messages.each do |msg| %>
	          <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>
		<%= f.input :name, label: 'Nombre' %>
	  <%= f.input :schedule, label: 'Horario' %>
	  <%= f.association :users, collection: @users,  label_method: :email, label: "Integrantes: ", value_method: :id, placeholder: 'Elige Integrantes' %>
	  <%= f.button :submit, 'Editar Grupo' %>
	<% end %>
</div>
<!-- <%= link_to 'Back', groups_path %> -->
</div>

<script type="text/javascript">
  $(document).ready(function() {
      $('select').material_select();
  });
</script>
