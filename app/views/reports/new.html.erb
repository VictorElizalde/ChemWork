<div class = "container">
	<div class = "container-forms">

<div class = "center">
<h1>New Report</h1>
</div>
<%= simple_form_for [@group, @assignment, @report] do |f| %>

  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :lab_phase %><br />
    <%= f.select :lab_phase, ['Pre-Lab', 'Lab', 'Pos-Lab'], prompt: 'Select Lab Phase' %>
  </div>

  <div class="field">
    <%= f.file_field :file %>
  </div>

  <div class="field">
    <%= f.label "Compartir con usuarios escribe los mails separados por commas" %><br>
    <%= f.text_area :shared_with %>
  </div>

  <div class="field">
    <%= f.label "Link de youtube" %><br>
    <%= f.text_area :url %>
  </div>

  <div class="actions">
    <%= f.submit, 'Crear Reporte' %>
  </div>

<% end %>


<!-- <%= link_to 'Back', group_assignment_path(@group, @assignment) %> -->
</div>
</div>
