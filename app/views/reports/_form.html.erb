<%= simple_form_for [@group, @assignment, @report] do |f| %>

  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :lab_phase %><br />
    <%= f.select :lab_phase, ['Pre-Lab', 'Lab', 'Pos-Lab'], prompt: 'Select Lab Phase' %>
  </div>

  <div class="field">
    <%= f.file_field :file %>
  </div>

  <div class="field">
    <%= f.label :shared_with %><br>
    <%= f.text_area :shared_with %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
