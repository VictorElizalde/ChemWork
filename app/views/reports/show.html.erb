<div class="container">
<div class="card-panel white">

  <h3>Detalles de Reporte</h3>
  <%= link_to 'Descargar Reporte', group_assignment_report_download_path(@report.assignment.group, @report.assignment, @report), class: "waves-effect waves-light btn" %>
  <% if current_user.email == @report.user.email %>
    <%= link_to 'Eliminar', group_assignment_report_path(@report.assignment.group, @report.assignment, @report),
          method: :delete,
          data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn red" %></td>
  <% end %>

<p>
  <strong>Fecha:</strong>
  <%= @report.created_at.in_time_zone("Monterrey") %>
</p>

<p>
  <strong>Fase Laboratorio:</strong>
  <%= @report.lab_phase %>
</p>

<p>
  <strong>Nombre Archivo:</strong>
  <%= @report.filename %>
</p>

<p>
  <strong>Estudiante:</strong>
  <%= @report.user.email %>
</p>

<p>
  <strong>Compartido con:</strong>
  <%= @report.shared_with %>
</p>

<div class="center">
<iframe width="420" height="315" src="http://www.youtube.com/embed/<%= @id_youtube %>" frameborder="0" allowfullscreen></iframe>
</div>
</div>

<br>

</div>
