<div class = "container" >
	<div class = "center" >
	  <h2>Nueva Tarea</h2>
  </div>
<div class = "container-forms" >

<%= simple_form_for [@group, @assignment] do |f| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@assignment.errors.count, "error") %> prohibieron que la tarea se salvara
      </h2>
      <ul>
        <% @assignment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :name, label: 'Nombre' %>
  <%= f.button :submit, 'Crear tarea' %>
<% end %>

</div>

</div>
